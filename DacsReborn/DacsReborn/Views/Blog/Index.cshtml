    <script>
    function expandDescription(button) {
        var description = button.parentNode.querySelector(".description");
        if (description.classList.contains("expanded")) {
            description.style.height = "200px"; // Chiều cao mặc định khi thu gọn
            button.textContent = "Xem thêm";
            description.classList.remove("expanded");
        } else {
            var fullHeight = description.scrollHeight; // Chiều cao toàn bộ nội dung
            description.style.height = fullHeight + "px";
            button.textContent = "Thu gọn";
            description.classList.add("expanded");
        }
    }
