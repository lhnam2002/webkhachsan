@model DacsReborn.Models.Booking

<h2>Checkout</h2>
<form asp-action="Checkout" method="post">
    <div class="form-group">
        <label asp-for="Content">Nội dung giao dịch</label>
        <input asp-for="Content" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Notes">Ghi chú</label>
        <textarea asp-for="Notes" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label>Tổng Tiền: </label>
        <span>@Model.TotalPrice.ToString("C") VNĐ</span>
    </div>

    <button type="submit" class="btn btn-primary">Place Booking</button>
</form>

<!-- Form cho nút Pay MOMO Now -->
<br />
<form action="@Url.Action("Payment", "Booking")" method="post">
    <input type="hidden" name="tongTien" value="@Convert.ToInt32(Model.TotalPrice)" />
    <button type="submit" class="btn btn-primary">Pay MOMO Now</button>
</form>
