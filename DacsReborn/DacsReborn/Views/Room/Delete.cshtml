<style>
    :root {
        --primary-color: #3498db;
        --secondary-color: #2c3e50;
        --danger-color: #ceb0ff;
        --background-color: #ecf0f1;
        --text-color: #34495e;
        --border-radius: 8px;
        --box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: var(--background-color);
        color: var(--text-color);
        margin: 0;
        padding: 0;
    }

    h1 {
        color: var(--danger-color);
        text-align: center;
        margin-top: 20px;
    }

    h3 {
        text-align: center;
        margin-bottom: 30px;
    }

    hr {
        border: 0;
        height: 1px;
        background: var(--secondary-color);
        margin: 20px 0;
    }

    dl.row {
        background: #ffffff;
        border-radius: var(--border-radius);
        padding: 20px;
        box-shadow: var(--box-shadow);
        margin: 20px auto;
        max-width: 800px;
    }

    dt.col-sm-2 {
        font-weight: bold;
        color: var(--primary-color);
    }

    dd.col-sm-10 {
        margin-bottom: 10px;
    }

        dd.col-sm-10 img {
            border: 1px solid var(--secondary-color);
            border-radius: var(--border-radius);
            width: 100%;
            max-width: 450px;
        }

    form {
        text-align: center;
        margin-top: 30px;
    }

        form .btn {
            margin-top: 20px;
            background-color: var(--danger-color);
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: var(--border-radius);
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s;
        }

            form .btn:hover {
                background-color: darken(var(--danger-color), 10%);
            }

    a {
        color: var(--primary-color);
        text-decoration: none;
        margin-left: 10px;
        font-size: 16px;
    }

        a:hover {
            text-decoration: underline;
        }
</style>
@model DacsReborn.Models.Room


<h1>Delete</h1>

<h3>Bạn có chắc chắn xóa phòng này???</h3>
<div>
    @* <h4>Room</h4> *@
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ImageUrl)
        </dt>
        <dd class="col-sm-10">
            <img src="@Html.DisplayFor(model => model.ImageUrl)" width="450px" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Category

        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="RoomId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Trở về</a>
    </form>
</div>
