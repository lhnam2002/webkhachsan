@model IEnumerable<DacsReborn.Models.Room>

@{
    ViewData["Title"] = "Danh sách phòng";
}

<h1>@ViewData["Title"]</h1>

<div class="action-links">
    <a asp-action="Index" asp-controller="Category" class="btn btn-info" style="background-color: #c96d2eeb; border: 1px solid #000000;">Thêm danh mục phòng</a>
    <a asp-action="Add" class="btn btn-info" style="background-color: #c96d2eeb; border: 1px solid #000000;">Thêm phòng mới</a>
</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Tên phòng</th>
            <th>Giá</th>
            <th>Mô tả</th>
            <th>Ảnh</th>
            <th>Danh mục</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td><img src="@Html.DisplayFor(modelItem => item.ImageUrl)" class="room-image img-thumbnail" style="max-width: 300px; max-height: 250px;" /></td>
                <td>@Html.DisplayFor(modelItem => item.Category.Name)</td>
                <td class="action-buttons">
                    <a asp-action="Update" asp-route-id="@item.RoomId" class="btn btn-info" style="background-color: #ff9334a3;  border: 1px solid #000000;">Chỉnh sửa</a> |
                    <a asp-action="Display" asp-route-id="@item.RoomId" class="btn btn-info" style="background-color: #ff9334a3;  border: 1px solid #000000;">Chi tiết</a> |
                    <a asp-action="Delete" asp-route-id="@item.RoomId" class="btn btn-info" style="background-color: #ff9334a3 ; border: 1px solid #000000;">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
